                        <include>**/*</include>
                    </includes>
                    <merge>true</merge>
                    <repositoryName>mustangproject</repositoryName>
                    - github repo name -
                    <repositoryOwner>ZUGFeRD</repositoryOwner>
                    - github username -
                </configuration>
                <executions>
                    - run site-maven-plugin's 'site' target as part of the build's normal
                        'deploy' phase -
